{
    "manifest_version": 3,
    "name": "Domain Tracker",
    "version": "1.0",
    "description": "Tracks domains visited in the browser.",
    "permissions": [
        "webRequest",
        "webNavigation",
        "storage",
        "activeTab",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}